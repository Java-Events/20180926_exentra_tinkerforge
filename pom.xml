  <properties>
    <!--<rapidpm-dependencies.version>04.00.06-RPM-SNAPSHOT</rapidpm-dependencies.version>-->

    <!--<maven.compiler.release>10</maven.compiler.release> &lt;!&ndash;release makes source and target&ndash;&gt;-->
